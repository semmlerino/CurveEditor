{
  "typeCheckingMode": "recommended",
  "pythonVersion": "3.12",
  "pythonPlatform": "Linux",
  "venvPath": ".",
  "venv": "venv",
  "stubPath": "./typings",
  "useLibraryCodeForTypes": true,
  "allowedUntypedLibraries": ["numpy", "pytest"],
  "include": [
    "core",
    "data",
    "io_utils",
    "rendering",
    "services",
    "stores",
    "tests",
    "ui",
    "main.py"
  ],
  "exclude": [
    "**/build",
    "**/venv",
    "**/.mypy_cache",
    "**/node_modules",
    "**/__pycache__",
    "**/*.txt",
    "**/*.bat",
    "**/*.md",
    "**/*.sh",
    "2*",
    "footage",
    "docs/archive",
    "archive_obsolete",
    "archive_legacy",
    "archive",
    "archive_diagnostics",
    ".git",
    ".claude",
    ".windsurf",
    ".ruff_cache",
    ".pytest_cache",
    ".benchmarks",
    ".hypothesis",
    "LogicExamples",
    "LogicExamples/**",
    "SetTrackingBwd.py",
    "SetTrackingFwd.py",
    "SetTrackingFwdBwd.py",
    "test_zoom_bug_fix.py",
    "test_images_output",
    "test_data",
    "commands",
    "session",
    "profiling",
    "profiling/**",
    "tools",
    "tools/**",
    "test_*.py",
    "performance*.py"
  ],
  "reportMissingImports": "warning",
  "reportMissingTypeStubs": "none",
  "reportUndefinedVariable": "error",
  "reportOptionalMemberAccess": "warning",
  "reportOptionalCall": "warning",
  "reportUnusedImport": "warning",
  "reportUnusedVariable": "warning",
  "reportImplicitStringConcatenation": "warning",
  "reportDeprecated": "warning",
  "reportUnnecessaryTypeIgnoreComment": "warning",
  "reportExplicitAny": "warning",
  "reportAny": "none",
  "reportUnannotatedClassAttribute": "warning",  // ← STRICTER: Require type hints on class attributes
  "reportUnknownParameterType": "none",
  "reportUnknownVariableType": "none",
  "reportUnknownMemberType": "none",
  "reportUnknownArgumentType": "none",
  "reportUnknownLambdaType": "none",
  "reportMissingParameterType": "warning",
  "reportMissingTypeArgument": "warning",  // ← STRICTER: Require list[str] not bare list
  "reportPrivateUsage": "warning",
  "reportUnnecessaryCast": "warning",
  "reportUnnecessaryComparison": "warning",
  "reportIncompatibleMethodOverride": "error",
  "reportIncompatibleVariableOverride": "error",
  "reportOverlappingOverload": "warning",
  "reportUninitializedInstanceVariable": "warning",
  "reportIgnoreCommentWithoutRule": "error",
  "reportPrivateImportUsage": "warning",
  "reportUnusedCallResult": "none",
  "reportUnusedParameter": "warning",
  "reportUnreachable": "warning",
  "reportRedeclaration": "warning"
}
