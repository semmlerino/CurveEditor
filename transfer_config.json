{
  "include_patterns": [
    "*.py",
    "*.json",
    "*.yml",
    "*.yaml",
    "*.md",
    "*.txt",
    "*.ini",
    "*.cfg",
    "*.pyi",
    "*.sh",
    "requirements*.txt",
    "Dockerfile",
    ".dockerignore",
    "pytest.ini",
    "pyrightconfig.json",
    "wrapper/*"
  ],
  "exclude_patterns": [
    "test_*.py",
    "*_test.py",
    "tests/",
    "Transfer.py",
    "transfer_cli.py",
    "bundle_app.py",
    "setup_transfer_hook.py",
    "*.log",
    "*.tmp",
    "*.bak",
    "*.backup",
    "encoded_app_*.txt",
    "encoded_releases/*",
    "analyze_*.py",
    "count_*.py",
    "fix_*.py",
    "test_startup_fix.py",
    "shotbot_latest.txt",
    "venv_py311/*",
    "test_venv/*",
    "*AGENT*.md",
    "*WEEK*.md",
    "*REVIEW*.md",
    "*COMPLETE*.md",
    "*GUIDE*.md",
    "*PROGRESS*.md"
  ],
  "exclude_dirs": [
    "tests",
    "test",
    "__pycache__",
    ".git",
    ".pytest_cache",
    "venv",
    "venv_py311",
    "test_venv",
    "env",
    ".venv",
    ".env",
    "archive",
    "archived",
    "copy",
    ".shotbot",
    "htmlcov",
    ".coverage",
    ".hypothesis",
    ".vscode",
    ".idea",
    "encoded_releases",
    "node_modules",
    "dist",
    "build",
    ".eggs",
    "docs",
    ".post-commit-output",
    ".github"
  ],
  "max_file_size_mb": 10,
  "chunk_size_kb": 5120,
  "output_dir": "encoded_releases",
  "remote_branch": "encoded-releases",
  "auto_push": true,
  "clean_old_releases": true,
  "max_releases_to_keep": 10,
  "commit_message_template": "Auto-encoded release for commit {commit_hash}",
  "encoding_options": {
    "compression": "gzip",
    "include_metadata": true,
    "single_file_output": true
  }
}
